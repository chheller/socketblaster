extends layout
mixin storeItem(source, name, price, description)
	div.col-sm-4
		div.thumbnail
			img(src=source)
			div.caption
				h4(class="pull-right")=price
				h4=name
				p=description
block pageTitle

block pageContent
	.container
		div.row
			div.col-md-4
				input(type="text", id="filterLocation", class="form-control", placeholder="Filter by Location")
				br
				input(type="submit", value="Submit", class="btn btn-lg btn-primary btn-block", id="submitLocation")
		h2 Listings
		#listings
		// /LISTINGS LIST
	script(src='/javascripts/filterlistings.js')
